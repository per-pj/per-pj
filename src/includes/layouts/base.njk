<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="{{ meta_description or 'per-pjのWebサイトです。' }}"
    />
    <title>{{ title or 'per-pj - Works' }}</title>
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-910PNS9N5T"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-910PNS9N5T');
    </script>
    <link rel="icon" href="{{ '/assets/img/favicon.ico' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/base/reset.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/base/base.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/layout/header.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/index.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/layout/post-detail.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/post-list.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/about.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/services.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/contact.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/layout/footer.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/base/typography.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/components/btn.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/components/post-list-scroll.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/components/post-card.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/components/credit.css' | url }}" />
    <link rel="stylesheet" href="{{ '/assets/css/base/responsive.css' | url }}" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lobster&display=swap"
      rel="stylesheet"
    />
    {% block page_css %}{% endblock %}
  </head>
  <body>
    {% include "header.njk" %}

    <main>
      {{ content | safe }}
    </main>

    {% if page.url != "/contact/" %}
      {% include "contact-form.njk" %}
    {% endif %}

    {% include "footer.njk" %}

    <button id="back-to-top"><i class="fas fa-arrow-up"></i></button>

    <script type="module" src="{{ '/assets/js/script.js' | url }}"></script>
    {% block page_js %}{% endblock %}
  </body>
</html>
